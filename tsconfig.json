{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "src/js",
    "sourceMap": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src/ts/**/*"
  ]
}